letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
ciphertext = " "
def encrypt(message, shift):
    ciphertext = " "
    for letters in message:
        letters = letters.upper()
        if not letters == " ":
            index =letters.find(letters)
            if index == -1:
                ciphertext += letters
            else:
                new_index = index + shift
                if new_index >= 26:
                    new_index -= 26
                ciphertext += letters[new_index]
    return ciphertext


def decrypt(ciphertext, shift):
    original_message = " "
    for letters in ciphertext:
        letters = letters.upper()
        if not letters == " ":
            index =letters.find(letters)
            if index == -1:
                original_message += letters
            else:
                new_index = index - shift
                if new_index < 0:
                    new_index += 26
                original_message += letters[new_index]
    return original_message


print("WELCOME TO MY SECRET MESSAGE ARENA")
print()
print("__CEASER CIPHER PROGRAM__")

print("DO YOU WANT TO ENCRYPT OR DECRYPT YOUR MESSAGE ?")
print("Enter 1 to encrypt or 2 to decrypt...")
user_response =input("Enter 1/2:")
if user_response == "1":
    print("CIPHER MODE ACTIVATED")
    message = input("input message you want to encrypt:")
    shift =int(input("input shift (must be between 1-26):"))
    ciphertext = encrypt(message, shift )
    print(f"CIPHERTEXT: {ciphertext}")

elif user_response == "2":
    print("DECRIPTION MODE ACTIVATED")
    message = input("input message you want to decrypt:")
    shift =int(input("input shift (must be between 1-26):"))
    original_message = decrypt(message, shift) 
    print(F"ORIGINAL_TEXT: {original_message}")

print("THANK YOU>>>>")
